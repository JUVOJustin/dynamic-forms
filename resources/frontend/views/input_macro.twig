{% macro input_text(label, name, placeholder='', value='', required=false) %}
    <div class="input--wrapper {{ name }}"
         x-data="textInput('{{ name }}', '{{ label }}', '{{ required }}', '{{ placeholder  }}')"
         x-id="['{{ name }}']"
         :id="idWrapper"
    >
        <label :for="id" x-text="label" x-show="label">{{ label }}</label>
        <input
                :type="type"
                :id="id"
                :name="name"
                :required="required"
                x-model="value"
                placeholder="{{ placeholder }}"
        />
    </div>
{% endmacro %}

