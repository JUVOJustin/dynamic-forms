{% macro input_text(field) %}
    <div class="input--wrapper"
         x-data='textInput({{ field|json_encode() }})'
         :class="name"
         :id="idWrapper"
    >
        <label :for="id" x-text="label" x-show="label"></label>
        <input
                :type="type"
                :id="id"
                :name="name"
                :required="required"
                x-model="value"
                placeholder="{{ placeholder }}"
        />
    </div>
{% endmacro %}

