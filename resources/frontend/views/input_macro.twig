{% macro input_daterange(name, labels, bookedDates, config, day_offset) %}
    <div
            class="input--datepicker {{ name }}"
            x-data='datepickerInput("{{ name }}", {{ labels|json_encode()}}, {{ bookedDates|json_encode()}}, {{config|json_encode()}}, "{{ day_offset }}")'
            :id="idWrapper"
            x-id="['{{ name }}']"
            @click.outside="picker.hide()"
    >
        <div class="input--wrapper checkin" id="checkin-wrapper">
            <label :for="id + '-checkin'" x-text="labels.checkin" x-show="labels.checkin"></label>
